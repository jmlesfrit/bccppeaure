{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idproduit</th>
                <th>Nomproduit</th>
                <th>Categorie</th>
                <th>Numproduit</th>
                <th>IdLot</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idproduit }}</td>
                <td>{{ produit.nomproduit }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.numproduit }}</td>
                <td>{{ produit.lot_idlot }}</td>
                <td>
                    <a href="{{ path('produit_show', {'idproduit': produit.idproduit}) }}">show</a>
                    <a href="{{ path('produit_edit', {'idproduit': produit.idproduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
